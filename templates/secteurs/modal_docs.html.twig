<div class="modal fade" id="modalDocs{{key}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
	<div class="modal-dialog modal-lg">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="exampleModalLabel">Les documents de l'établissement
					<strong>{{etablissement.sigle}}</strong>
				</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">
				<table class="table table-striped">
					<thead>
						<tr>
							<th scope="col">Désignation</th>
							<th scope="col">Lien</th>
						</tr>
					</thead>
					<tbody>
						{% for doc in etablissement.documentEtablissements %}
							<tr>
								<td>{{doc.designation}}</td>
								<td>
									{% if doc.link %}
										<a href="{{doc.link}}" target="_blank">{{doc.link}}</a>
									{% endif %}
									{% if doc.file %}
										<a href="{{ asset('uploads/etablissement_docs/' ~ doc.file)}}" download>Télécharger</a>
									{% endif %}
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
			</div>
		</div>
	</div>
</div>
