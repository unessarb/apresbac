{% extends 'layouts/base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row justify-content-center my-4">
			<div class="col-md-4">
				<div class="card">
					<div class="card-body">
						<h5 class="mb-2">Réinitialiser votre mot de passe</h5>

						{{ form_start(resetForm) }}
						{{ form_row(resetForm.plainPassword) }}
						<button class="btn btn-primary mt-4">Réinitialiser</button>
						{{ form_end(resetForm) }}
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
