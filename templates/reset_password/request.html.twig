{% extends 'layouts/base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe
{% endblock %}

{% block body %}
	<div class="container">
		{% for flash_error in app.flashes('reset_password_error') %}
			<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
		{% endfor %}
		<div class="row justify-content-center my-4">
			<div class="col-md-4">
				<div class="card">
					<div class="card-body">
						<div class="text-center">
							<h3>
								<i class="fa fa-lock fa-4x"></i>
							</h3>
							<h5>Réinitialiser votre mot de passe</h5>

							{{ form_start(requestForm) }}
							<div class="text-start mb-2">
								{{ form_row(requestForm.email) }}
							</div>
							<div class="mb-4">
								<small>
									Saisissez votre adresse électronique et nous vous enverrons un lien pour réinitialiser votre mot de passe.
								</small>
							</div>

							<button class="btn btn-primary btn-block">Envoyer</button>
							{{ form_end(requestForm) }}
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
