<div class="modal fade" id="modalSeuil{{key}}" tabindex="-2" aria-labelledby="exampleModalLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="exampleModalLabel">Les seuils de l'établissement
					<strong class="text-uppercase">{{etablissement.sigle}}</strong>
				</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">
				<table class="table table-striped">
					<thead>
						<tr>
							<th scope="col">Branche</th>
							<th scope="col">Seuil</th>
						</tr>
					</thead>
					<tbody>
						{% if etablissement.seuilSM != 0 %}
							<tr>
								<td>Sciences mathématiques</td>
								<td>{{ etablissement.seuilSM |number_format(2, ',') }}</td>
							</tr>
						{% endif %}

						{% if etablissement.seuilSP != 0 %}
							<tr>
								<td>Sciences Physiques</td>
								<td>{{ etablissement.seuilSP |number_format(2, ',') }}</td>
							</tr>
						{% endif %}

						{% if etablissement.seuilSVT != 0 %}
							<tr>
								<td>Sciences de la Vie et de la Terre</td>
								<td>{{ etablissement.seuilSVT |number_format(2, ',') }}</td>
							</tr>
						{% endif %}

						{% if etablissement.seuilSAgro != 0 %}
							<tr>
								<td>Sciences agronomiques</td>
								<td>{{ etablissement.seuilSAgro |number_format(2, ',') }}</td>
							</tr>
						{% endif %}

						{% if etablissement.seuilEco != 0 %}
							<tr>
								<td>Sciences économiques</td>
								<td>{{ etablissement.seuilEco |number_format(2, ',') }}</td>
							</tr>
						{% endif %}

						{% if etablissement.seuilSGC != 0 %}
							<tr>
								<td>Sciences de Gestion Comptable</td>
								<td>{{ etablissement.seuilSGC |number_format(2, ',') }}</td>
							</tr>
						{% endif %}

						{% if etablissement.seuilSTM != 0 %}
							<tr>
								<td>Sciences et Technologies Mécaniques</td>
								<td>{{ etablissement.seuilSTM |number_format(2, ',') }}</td>
							</tr>
						{% endif %}

						{% if etablissement.seuilSTE != 0 %}
							<tr>
								<td>Sciences et Technologies Electriques</td>
								<td>{{ etablissement.seuilSTE |number_format(2, ',') }}</td>
							</tr>
						{% endif %}

						{% if etablissement.seuilLSH != 0 %}
							<tr>
								<td>LSH (Lettre)</td>
								<td>{{ etablissement.seuilLSH |number_format(2, ',') }}</td>
							</tr>
						{% endif %}

						{% if etablissement.seuilChariaa != 0 %}
							<tr>
								<td>Chariâa</td>
								<td>{{ etablissement.seuilChariaa |number_format(2, ',') }}</td>
							</tr>
						{% endif %}

					</tbody>
				</table>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
			</div>
		</div>
	</div>
</div>
